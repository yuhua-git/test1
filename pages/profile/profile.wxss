/* 容器样式 */
.profile-container {
  min-height: 100vh;
  background: transparent;
}

/* 用户信息区域样式 */
.user-section {
  background: rgba(0, 123, 255, 0.1);
  padding: 40rpx 30rpx;
  color: rgba(33, 33, 33, 0.9);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(0, 240, 255, 0.4);
  box-shadow: 0 0 20rpx rgba(0, 240, 255, 0.3);
  filter: brightness(0.9);
}

.info-right {
  margin-left: 30rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  display: block;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
}

.welcome {
  font-size: 26rpx;
  color: rgba(33, 33, 33, 0.7);
}

.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.default-avatar {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  filter: brightness(0.9);
}

.login-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: rgba(0, 123, 255, 0.3);
  border-radius: 40rpx;
  color: rgba(33, 33, 33, 0.9);
  font-size: 30rpx;
  border: 1px solid rgba(0, 123, 255, 0.5);
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: scale(0.95);
  background: rgba(0, 123, 255, 0.4);
}

/* 菜单列表样式 */
.menu-list {
  background: rgba(255, 255, 255, 0.05);
  margin-top: 20rpx;
  border-radius: 16rpx;
  margin: 20rpx;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.menu-item:active {
  background: rgba(255, 255, 255, 0.08);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-content {
  display: flex;
  align-items: center;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  filter: brightness(0.9);
}

.menu-text {
  font-size: 30rpx;
  color: rgba(33, 33, 33, 0.9);
  text-shadow: 0 2px 4px rgba(255, 255, 255, 0.3);
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.5;
  filter: brightness(2);
}

/* 退出登录按钮样式 */
.logout-section {
  margin: 40rpx 30rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: rgba(255, 77, 79, 0.2);
  border-radius: 44rpx;
  color: #ff6b6b;
  font-size: 32rpx;
  border: 1px solid rgba(255, 77, 79, 0.3);
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.logout-btn:active {
  transform: scale(0.98);
  background: rgba(255, 77, 79, 0.3);
}

/* 版本信息样式 */
.version-info {
  text-align: center;
  padding: 40rpx 0;
  color: rgba(33, 33, 33, 0.6);
  font-size: 24rpx;
  text-shadow: 0 2px 4px rgba(255, 255, 255, 0.3);
}