/* 容器样式 */
.detail-container {
  min-height: 100vh;
  background: transparent;
  padding-bottom: 40rpx;
}

/* 加载和错误状态样式 */
.loading,
.error {
  text-align: center;
  padding: 100rpx 30rpx;
  color: rgba(33, 33, 33, 0.6);
  font-size: 28rpx;
  text-shadow: 0 2px 4px rgba(255, 255, 255, 0.3);
}

.retry-btn {
  margin-top: 30rpx;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: rgba(33, 33, 33, 0.9);
  background: rgba(0, 123, 255, 0.3);
  border-radius: 40rpx;
  border: 1px solid rgba(0, 123, 255, 0.5);
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.retry-btn:active {
  transform: scale(0.95);
  background: rgba(0, 123, 255, 0.4);
}

/* 文章头部样式 */
.article-header {
  padding: 40rpx 30rpx;
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.article-title {
  font-size: 40rpx;
  font-weight: bold;
  color: rgba(33, 33, 33, 0.9);
  line-height: 1.4;
  margin-bottom: 20rpx;
  text-shadow: 0 2px 4px rgba(255, 255, 255, 0.3);
}

.article-info {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: rgba(33, 33, 33, 0.6);
}

.article-source {
  margin-right: 20rpx;
}

/* 文章封面样式 */
.article-cover {
  width: 100%;
  background: rgba(0, 0, 0, 0.2);
}

.cover-image {
  width: 100%;
  display: block;
  filter: brightness(0.9);
}

/* 文章内容样式 */
.article-content {
  padding: 30rpx;
  font-size: 30rpx;
  line-height: 1.6;
  color: rgba(33, 33, 33, 0.8);
  background: rgba(255, 255, 255, 0.05);
  margin: 20rpx;
  border-radius: 16rpx;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.article-content rich-text {
  width: 100%;
}

/* 文章底部样式 */
.article-footer {
  padding: 30rpx;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10px);
}

.footer-info {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: rgba(33, 33, 33, 0.6);
}

.views,
.likes {
  margin: 0 20rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.views::before {
  content: '👁️';
}

.likes::before {
  content: '❤️';
}